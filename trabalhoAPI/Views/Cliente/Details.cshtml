@model trabalhoAPI.Models.Cliente

@{
    ViewData["Title"] = "Cliente";
}

<h1>Detalhes Cliente</h1>

<div class="row">
    <div class="col-md-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control" readonly />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" readonly />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Telefone" class="control-label"></label>
            <input asp-for="Telefone" class="form-control" readonly />
            <span asp-validation-for="Telefone" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Cpf" class="control-label"></label>
            <input asp-for="Cpf" class="form-control" readonly />
            <span asp-validation-for="Cpf" class="text-danger"></span>
        </div>
        <div class="form-group">
            @{
                try
                {
                    var base64 = Convert.ToBase64String(Model.Foto);
                    if (!string.IsNullOrEmpty(base64))
                    {
                        var imgSrc = String.Format("data:image/png;base64,{0}", base64);
                        <img class="img-fluid" src="@imgSrc" width="300" />
                    }
                }
                catch
                {
                    <img class="img-fluid"
                         src="https://i0.wp.com/omeudiadia.com.br/wp-content/uploads/2022/04/gato-feio.webp?w=594&ssl=1"
                         width="150" />
                }
            }
        </div>
        <div class="form-group">
            <label asp-for="Cep" class="control-label"></label>
            <input asp-for="Cep" class="form-control" readonly />
            <span asp-validation-for="Cep" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Logradouro" class="control-label"></label>
            <input asp-for="Logradouro" class="form-control" readonly />
            <span asp-validation-for="Logradouro" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Complemento" class="control-label"></label>
            <input asp-for="Complemento" class="form-control" readonly />
            <span asp-validation-for="Complemento" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Bairro" class="control-label"></label>
            <input asp-for="Bairro" class="form-control" readonly />
            <span asp-validation-for="Bairro" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Localidade" class="control-label"></label>
            <input asp-for="Localidade" class="form-control" readonly />
            <span asp-validation-for="Localidade" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Uf" class="control-label"></label>
            <input asp-for="Uf" class="form-control" readonly />
            <span asp-validation-for="Uf" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Ddd" class="control-label"></label>
            <input asp-for="Ddd" class="form-control" readonly />
            <span asp-validation-for="Ddd" class="text-danger"></span>
        </div>
        <div class="form-group" style="margin-top:15px;">
            <a class="btn btn-outline-primary btn-sm"
               asp-action="Edit"
               asp-route-id="@Model.Id">Editar</a>
            <a class="btn btn-secondary text-white btn-sm"
               asp-action="Index">Voltar</a>
        </div>
    </div>
</div>
